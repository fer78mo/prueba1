# ===================================
# CONFIGURACIÓN ANTI-SESGO Y ROBUSTEZ
# ===================================

# Activar modo anti-sesgo (múltiples pasadas con orden aleatorio)
ANTI_BIAS_MODE=true

# Número de pasadas para validación múltiple choice (3-5 recomendado)
MC_VALIDATION_PASSES=3

# Umbral mínimo de confianza (0.0-1.0)
MIN_CONFIDENCE_THRESHOLD=0.6

# Activar fallback de retrieval con configuraciones más permisivas
FALLBACK_RETRIEVAL=true

# Configuraciones de retrieval más permisivas para fallback
FALLBACK_MINLEN_SHORT=30
FALLBACK_MINLEN_LONG=45

# Logging detallado para validación
VALIDATION_DETAILED_LOGGING=true

# Otras configuraciones existentes (mantener compatibilidad)
STRICT_CITATION=false
STRICT_LAW_GUARD=false
ADAPTIVE_MINLEN=true
MINLEN_SHORT=60
MINLEN_LONG=90
SHORT_ARTICLE_THRESHOLD=800
HIGHLIGHT_IN_OUTPUT=true
